@model Menu
@{ Layout = "_Layout"; ViewBag.Title = "Add a Menu";}

<h2>Add a Menu <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>

<form asp-action="AddMenu">

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive">IsActive:</label>
        <input asp-for="IsActive" class="form-control" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsFreeDelivery">IsFreeDelivery:</label>
        <input asp-for="IsFreeDelivery" class="form-control" />
        <span asp-validation-for="IsFreeDelivery" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfLaunch">DateOfLaunch:</label>
        <input asp-for="DateOfLaunch" class="form-control" />
        <span asp-validation-for="DateOfLaunch" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add Menu</button>
    </div>
</form>
<br />
<br />
<form asp-action="AddMenu" method="get">
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary" align="right">Clear Form</button>
    </div>
</form>


@if (Model != null)
{
    <h2>Menu</h2>

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr colspan="2">
                <th>Name</th>
                <th>Price</th>
                <th>IsActive</th>
                <th>IsFreeDelivery</th>
                <th>DateOfLaunch</th>
                <th>Category</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Name</td>

                <td>@Model.Price</td>

                <td>@Model.IsActive</td>

                <td>@Model.IsFreeDelivery</td>
                <td>@Model.DateOfLaunch</td>

                <td>@Model.Category</td>


            </tr>
        </tbody>
    </table>
    <div class="alert-info">Menu Added!!</div>
}
